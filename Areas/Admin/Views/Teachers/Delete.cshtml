@model TinhocOnline.Models.Teacher
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Confirm to delete a teacher</h2>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="TeacherID">Teacher ID</label>
            <input type="text" class="form-control mb-3" asp-for="TeacherID" disabled />
        </div>
        <div class="form-group col-md-6">
            <label>Username</label>
            <input type="text" class="form-control mb-3" value="@Model.User?.UserName" disabled />
        </div>
        <div class="form-group col-md-6">
            <label>Full Name</label>
            <input type="text" class="form-control mb-3" value="@Model.User?.FullName" disabled />
        </div>
    </div>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.UserID" />  <!-- ✅ Phải là UserID -->
        <div class="form-group mt-3">
            <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
                <i class="bi bi-arrow-left-circle"></i> Go back
            </a>
            <button type="submit" class="btn btn-lg btn-danger p-2">
                <i class="bi bi-trash"></i> Delete
            </button>
        </div>
    </form>
</main>
